# Production Environment Variables
# Copy this to .env and fill in actual values

# Database (provided by hosting platform)
DATABASE_URL=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=production

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=

# Image processing
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,webp,gif

# Admin defaults (change after first login!)
ADMIN_EMAIL=admin@fineestate.com
ADMIN_PASSWORD=changeme123

# CORS (update with actual frontend URLs)
CORS_ORIGIN=https://fineestate.com,https://admin.fineestate.com